<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="PxUsage, HardcodedText"
    android:background="@color/black"
    tools:context=".NewPlaylistActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="200px"
                android:layout_marginTop="200px"
                android:fontFamily="@font/montserrat_bold"
                android:text="New Playlist"
                android:textColor="@color/white"
                android:textSize="140px"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/newPlaylistReady"
                android:layout_width="500px"
                android:layout_height="200px"
                android:background="@drawable/button"
                android:text="Save"
                android:textSize="90px"
                android:layout_marginTop="150px"
                android:fontFamily="@font/montserrat_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <EditText
                android:id="@+id/newPlaylistTitle"
                android:layout_width="700px"
                android:layout_height="200px"
                android:layout_marginTop="150px"
                android:autofillHints="username"
                android:background="@drawable/button"
                android:fontFamily="@font/montserrat_bold"
                android:hint="Title"
                android:inputType="text"
                android:maxLength="15"
                android:textAlignment="center"
                android:textSize="80px"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/addedAudioText"
                android:layout_width="wrap_content"
                android:layout_height="200px"
                android:layout_marginTop="200px"
                android:fontFamily="@font/montserrat_bold"
                android:text="Audio"
                android:textColor="@color/white"
                android:textSize="120px"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/newPlaylistAddSong"
                android:layout_width="225px"
                android:layout_height="225px"
                android:layout_marginTop="100px"
                android:background="@drawable/button"
                android:fontFamily="@font/montserrat_bold"
                android:text="+"
                android:textSize="150px"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/addedAudio"
                android:layout_marginTop="50px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" />
            <ImageView
                android:layout_width="150px"
                android:layout_height="150px" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>